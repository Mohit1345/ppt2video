

{
    "version": 2,
    "builds": [
        {
            "src": "requirements.txt",
            "use": "@vercel/pip",
            "config": {
                "command": "pip install -r requirements.txt"
            }
        },
        {
            "src": "manage.py",
            "use": "@vercel/python",
            "config": {
                "command": "python manage.py collectstatic --noinput && python manage.py runserver 0.0.0.0:$PORT"
            }
        }
    ],
    "routes": [
        {
            "src": "(.*)",
            "dest": "http://localhost:8000$1"
        }
    ]
}
